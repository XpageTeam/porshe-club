@media (min-width: 1000px)
	body.main
		
		.head

			&__logo
				display: none

		.lc-btn

			&:not(:hover)
				background: #000

@media (max-width: 1600px) and (min-width: 1000px)
	body.main .head
		padding-top: 0 

@media (max-width: 1600px)
	.main-title
		bottom: 65px

@media (max-width: 1400px)
	.main-title
		padding-inline: 25px
		bottom: 30px

@media (max-width: 1000px)
	body.main

		.head
			padding: 20px 20px 60px
			background: linear-gradient(to bottom, rgba(0,0,0, .5), rgba(255,255,255, .00001))

	.main-title

		&__text
			font-size: em(60)
			padding: 0 constant(safe-area-inset-right) 0 constant(safe-area-inset-left)
			padding: 0 env(safe-area-inset-right) 0 env(safe-area-inset-left)


@media (min-width: 660px)
	.main-img__video-sound
		left: 0
		right: 0
		margin: 0 auto
		max-width: 1661px
		width: 100%
		display: flex
		justify-content: flex-end

	@media (max-width: 1771px)
		.main-img__video-sound
			right: 18px
			width: calc(100% - 18px)

	@media (max-width: 1400px)
		.main-img__video-sound
			bottom: 33px

@media (max-width: 660px)
	.main-title

		&__text
			font-size: em(26)

	.loader:before,
	.loader:after
		height: 30vh

	.loader
		display: flex
		flex-direction: column
		justify-content: center

	.loader video
		height: 60vh
		top: calc(50% - 30vh)

	.main-img__video-sound
		left: 10px
		top: 5px
		right: auto
		bottom: auto
		z-index: 20